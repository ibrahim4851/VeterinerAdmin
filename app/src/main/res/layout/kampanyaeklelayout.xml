<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="#dbdbdb"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#10102c"
                android:textSize="25dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Bu Ekrandan Yeni Kampanya Oluşturabilirsiniz" />

            <EditText
                android:id="@+id/kampanyaBaslikEditText"
                android:layout_width="match_parent"
                android:background="@drawable/edittextbackground"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Kampanya Başlığı Girin"
                android:height="50dp" />

            <EditText
                android:id="@+id/kampanyaIcerikText"
                android:layout_width="match_parent"
                android:background="@drawable/edittextbackground"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:hint="Kampanya İçeriği Girin"
                android:layout_marginBottom="10dp"
                android:height="50dp" />

            <ImageView
                android:id="@+id/kampanyaEkleImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#10102c"
                    android:textColor="#fff"
                    android:id="@+id/kampanyaEkleButon"
                    android:textStyle="bold"
                    android:layout_height="50dp"
                    android:text="Kampanya Ekle" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:textColor="#fff"
                    android:id="@+id/kampanyaImageEkleButon"
                    android:textStyle="bold"
                    android:backgroundTint="#10102c"
                    android:layout_marginLeft="5dp"
                    android:layout_height="50dp"
                    android:text="Resim Seç" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
